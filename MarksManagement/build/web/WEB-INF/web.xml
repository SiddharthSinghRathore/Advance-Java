<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FacultyServlet</servlet-name>
        <servlet-class>marksmanagement.web.FacultyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>marksmanagement.web.CourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>marksmanagement.web.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>marksmanagement.web.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarksServlet</servlet-name>
        <servlet-class>marksmanagement.web.MarksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SchemeServlet</servlet-name>
        <servlet-class>marksmanagement.web.SchemeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacultyServlet</servlet-name>
        <url-pattern>/newFaculty</url-pattern>
        <url-pattern>/insertFaculty</url-pattern>
        <url-pattern>/deleteFaculty</url-pattern>
        <url-pattern>/editFaculty</url-pattern>
        <url-pattern>/updateFaculty</url-pattern>
        <url-pattern>/listFaculties</url-pattern>
        <url-pattern>/listCoursesHandled</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/newCourse</url-pattern>
        <url-pattern>/insertCourse</url-pattern>
        <url-pattern>/deleteCourse</url-pattern>
        <url-pattern>/editCourse</url-pattern>
        <url-pattern>/updateCourse</url-pattern>
        <url-pattern>/listCourses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/authenticate</url-pattern>
        <url-pattern>/changePasswordForm</url-pattern>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/newStudent</url-pattern>
        <url-pattern>/insertStudent</url-pattern>
        <url-pattern>/deleteStudent</url-pattern>
        <url-pattern>/editStudent</url-pattern>
        <url-pattern>/updateStudent</url-pattern>
        <url-pattern>/listStudents</url-pattern>
        <url-pattern>/listStudentCourses</url-pattern>
        <url-pattern>/registerForACourse</url-pattern>
        <url-pattern>/registerForACourseForm</url-pattern>
        <url-pattern>/studentSemesters</url-pattern>
        <url-pattern>/studentResult</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarksServlet</servlet-name>
        <url-pattern>/newMarks</url-pattern>
        <url-pattern>/insertMarks</url-pattern>
        <url-pattern>/deleteMarks</url-pattern>
        <url-pattern>/editMarks</url-pattern>
        <url-pattern>/updateMarks</url-pattern>
        <url-pattern>/listMarks</url-pattern>
        <url-pattern>/showStudentMarks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SchemeServlet</servlet-name>
        <url-pattern>/newScheme</url-pattern>
        <url-pattern>/insertScheme</url-pattern>
        <url-pattern>/deleteScheme</url-pattern>
        <url-pattern>/listSchemes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
